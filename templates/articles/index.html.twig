{% extends 'base.html.twig' %}

{% block title %}{% trans %}Articles list{% endtrans %}{% endblock %}



{% block body %}
    <div class="container p-xl-5">
        <div class="row justify-content-md-center ">
            <div class="col col-12">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active"><h1>{% trans %}Articles list{% endtrans %}</h1></li>
                </ol>
                {% for article in articles %}
                    <div class="card mb-3">
                        <h3 class="card-header">{{ article.titre }}</h3>
                        <div class="card-body">
                            <h6 class="card-subtitle text-muted">
                            </h6>
                        </div>
                        <div class="card-body">
                            <img src="{{ vich_uploader_asset(article, 'imageFile') }}" alt="">
                        </div>
                        <div class="card-body">{{ article.contenu|raw }}</div>
                        <div class="card-footer text-muted">
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item">
                                    {{ article.createAt|date }}
                                </li>
                            </ul>
                            <ul class="navbar-nav align-items-end">
                                <li class="nav-item">
                                    <a href="{{ path('article_view', {'slug': article.slug}) }}"
                                       class="btn btn-primary align-items-end">Lire la suite</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    {{ knp_pagination_render(articles) }}
{% endblock %}