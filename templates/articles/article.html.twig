{% extends 'base.html.twig' %}

{% block title %}{{ article.titre }}{% endblock %}

{% block body %}
    <div class="container">
{#    {{ user }}#}
    <div class="row justify-content-md-center">
        <div class="col col-13">
            <div class="card mb-3">
                <h3 class="card-header">{{ article.titre }}</h3>
                <div class="card-body">
                    <h6 class="card-subtitle text-muted">
                        <p>Cat√©gories :
                            {% for categorie in article.categories %}
                                {{ categorie.nom }}
                            {% endfor %}
                        </p>
                    </h6>
                </div>
                <div class="card-body">
                    <img src="{{ vich_uploader_asset(article, 'imageFile') }}" alt="">
                </div>
                <div class="card-body">{{ article.contenu|raw }}</div>
                <div class="card-footer text-muted">
                    {{ article.createAt|date }}
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col col-8">
            <div class="card bg-light mb-8" >
                <div class="card-header"><h2>Commentaires</h2></div>
                {% for commentaire in commentaires %}
                    <div class="card-body">
                        <h4 class="card-title">Publier par : {{ commentaire.username }}</h4>
                        <p class="card-text">{{ commentaire.contenu }}</p>
                    </div>
                    <div class="card-footer text-muted">
                        le {{ commentaire.createdAt|date }}
                    </div>
                {% else %}
                    <div class="card-body">
                        <h4 class="card-title">Pas de commentaires</h4>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="col col-3">
            {{ form(formComment) }}
        </div>
    </div>
{% endblock %}